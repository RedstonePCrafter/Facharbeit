<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:id="@+id/primaryAction"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@+id/secondaction"
    android:layout_toStartOf="@+id/secondaction">

    <TextView
        android:id="@+id/split_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/icon"
        android:layout_toRightOf="@+id/icon"
        android:text="Name"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/plan_dauer"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/split_name"
        android:layout_alignStart="@+id/split_name"
        android:layout_below="@+id/split_name"
        android:text=""
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        app:srcCompat="@drawable/ic_list_icon_white" />
</RelativeLayout>

<ImageButton
    android:id="@+id/secondaction"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_marginEnd="15dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="16dp"
    android:background="@null"
    app:srcCompat="@drawable/ic_dots" />



</RelativeLayout>