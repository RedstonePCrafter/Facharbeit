<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Set colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- every text is white -->
        <item name="android:textColor">#ffffff</item>
        <item name="android:editTextColor">#ffffff</item>
        <!-- no animation -->
        <item name="android:colorBackgroundFloating">@color/background</item>
        <!-- no animation -->
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowSoftInputMode">adjustNothing</item>
        <!-- backgroundcolor -->
        <item name="android:colorBackground">@color/background</item>
    </style>
    <style name="AlertTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:colorBackground">@color/background</item>
    </style>
</resources>