<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hessel.facharbeit">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />   <!-- Internet permission -->
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login.LoginActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Data.DataActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"/>
        <activity android:name=".Search.SearchActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"/>
        <activity android:name=".Plan.PlanActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"/>
        <activity android:name=".Settings.SettingsActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:parentActivityName=".Profile.ProfileActivity"/>
        <activity android:name=".Home.HomeActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"/>
        <activity android:name=".Login.RegisterActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"/>
        <activity android:name=".Utils.WalkthroughActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"/>
        <activity android:name=".SearchFood.SearchFoodActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".Home.HomeActivity"/>
        <activity android:name=".Utils.ScannerActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".SearchFood.SearchFoodActivity"/>
        <activity android:name=".Profile.ProfileActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"/>
        <activity android:name=".Login.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:parentActivityName=".Login.LoginActivity"/>
        <activity android:name=".SearchFood.FoodActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:parentActivityName=".SearchFood.SearchFoodActivity"/>
        <activity android:name=".SearchFood.CreateFoodActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".SearchFood.SearchFoodActivity"/>
        <activity android:name=".Plan.CreatePlanActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".Plan.PlanActivity"/>
        <activity android:name=".Plan.CreateSplitActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".Plan.PlanActivity"/>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>